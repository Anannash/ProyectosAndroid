<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText_encrypt"
        android:layout_width="371dp"
        android:layout_height="59dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="100sp"
        android:layout_marginEnd="20sp"
        android:hint="@string/editText_encriptar" />

    <EditText
        android:id="@+id/editText_desencrypt"
        android:layout_width="371dp"
        android:layout_height="63dp"
        android:layout_below="@id/editText_encrypt"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20sp"
        android:hint="@string/editText_desencriptar" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editText_desencrypt"
        android:layout_margin="20sp"
        android:id="@+id/button_encriptar"
        android:text="@string/button_encriptar"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_encriptar"
        android:layout_margin="20sp"
        android:id="@+id/button_desencriptar"
        android:text="@string/button_desencriptar"/>

</RelativeLayout>

