<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="141dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/IMhierro"
                    android:layout_width="83dp"
                    android:layout_height="115dp"
                    app:srcCompat="@drawable/hierro" />

                <TextView
                    android:id="@+id/TVDescHierro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

            </LinearLayout>

            <NumberPicker
                android:id="@+id/NP1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:value="0" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/IMacero"
                    android:layout_width="83dp"
                    android:layout_height="115dp"
                    app:srcCompat="@drawable/acero" />

                <TextView
                    android:id="@+id/TVDescAcero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

            </LinearLayout>

            <NumberPicker
                android:id="@+id/NP2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:value="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/IMestano"
                    android:layout_width="83dp"
                    android:layout_height="115dp"
                    app:srcCompat="@drawable/estano" />

                <TextView
                    android:id="@+id/TVDescEstano"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

            </LinearLayout>

            <NumberPicker
                android:id="@+id/NP3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:value="0" />
        </TableRow>
    </TableLayout>
</ScrollView>