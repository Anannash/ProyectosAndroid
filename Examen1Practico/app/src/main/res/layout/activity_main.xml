<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#B7ABA492"
        android:fontFamily="@font/aclonica"
        android:text="@string/titulo"
        android:textAlignment="center"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#B7ABA492"
            android:fontFamily="@font/aclonica"
            android:text="@string/Calificacion"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/CalificacionEDtxt"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#B7ABA492"
            android:ems="10"
            android:hint="@string/EditCal"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ListaCaltxt"
            android:layout_width="wrap_content"
            android:layout_height="181dp"
            android:background="#B7ABA492"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/CaliList"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/Agregarbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#201C1C"
            android:fontFamily="@font/aclonica"
            android:text="@string/btnAgregar" />
    </LinearLayout>

    <TextView
        android:id="@+id/CantCaltxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#B7ABA492"
        android:fontFamily="@font/aclonica"
        android:text="@string/Cantidad" />

    <TextView
        android:id="@+id/Promediotxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B7ABA492"
        android:fontFamily="@font/aclonica"
        android:text="@string/Promedio" />

    <TextView
        android:id="@+id/Evaluaciontxtt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B7ABA492"
        android:fontFamily="@font/aclonica"
        android:text="@string/Evaluacion" />

</LinearLayout>